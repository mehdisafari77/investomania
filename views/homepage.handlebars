{{#each projects as |project| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/projects/{{project.id}}">{{project.title}}</a>
    </h2>
    <p>Created by {{user.username}} on {{format_date project.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}