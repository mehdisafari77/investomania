<div class="card mb-3" style="display: flex; flex-direction: row;
    align-content: center;
    justify-content: center;
    align-items: center;">
  <div class="card-body">Project Name: <h2>{{title}}</h2>
    <img src="{{image}}" style="height: 300px; width: 500px;" alt="logo of project">
    
    <p class="card-text" style="
      margin-bottom: 5px; font-size: 22px"><small class="text-muted">Description: {{description}}</small></p>
      <p>Created by {{user.username}} on {{format_date date_picker}}</p>
    <button type="button" class="btn btn-primary btn-lg" onclick="backing()">Express Interest</button>
  </div>
</div>
<div>
  <h2>Contributors:</h2>
  <p>{{contributor}}</p>
</div>
<hr>
<div>
  <div class="modal-body">
    <form>
      <div class="form-group">
        <label for="exampleFormControlSelect1">Choose Amount:</label>
        <select
          class="form-control prType"
          id="exampleFormControlSelect1"
        >
          <option>$1</option>
          <option>$5</option>
          <option>$10</option>
          <option>$25</option>
          <option>$50</option>
          <option>$100</option>
          <option>$250</option>
          <option>$500</option>
        </select>
      </div>
      <br/>
      <h2>Tap to Submit</h2>
      <button type="button" class="btn" onclick="money()">Submit</button>
    </form>
  </div>
</div>
  </div>
</div>
</div>
<script>
  function money() {
    alert("The project user appreciates your generousity and thanks you!");
  }
  function backing() {
    alert("Thank you for backing this project!");
  }
</script>
